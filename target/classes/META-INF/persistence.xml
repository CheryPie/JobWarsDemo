<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="jobwars">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<non-jta-data-source>JOBWARS</non-jta-data-source>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="openjpa.ConnectionDriverName" value="oracle.jdbc.OracleDriver" />
			<property name="openjpa.ConnectionURL" value="jdbc:oracle:thin:@localhost:1521:xe" />
			<property name="openjpa.ConnectionUserName" value="JOBWARS" />
			<property name="openjpa.ConnectionPassword" value="cherypie" />
		</properties>
	</persistence-unit>
</persistence>
